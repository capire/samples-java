{
  "welcomeFile": "app/bookshop/index.html",
  "routes": [
    {
      "source": "^/app/(.*)$",
      "target": "$1",
      "localDir": "resources",
      "cacheControl": "no-cache, no-store, must-revalidate"
    },
    {
      "source": "^/appconfig/",
      "localDir": "resources",
      "cacheControl": "no-cache, no-store, must-revalidate"
    },
    {
      "source": "^/admin/",
      "destination": "bookstore-api",
      "csrfProtection": true
    },
    {
      "source": "^/browse/",
      "destination": "bookstore-api",
      "csrfProtection": true
    },
    {
      "source": "^/user/",
      "destination": "bookstore-api",
      "csrfProtection": true
    },
    {
      "source": "^/odata/v4/OrdersService/",
      "destination": "orders-api",
      "csrfProtection": true
    },
    {
      "source": "^/odata/v4/ReviewsService/",
      "destination": "reviews-api",
      "csrfProtection": true
    }
  ]
}
